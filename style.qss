/*tabwidget*/
QTabWidget {
    background-color: #323232;
}

QTabBar::tab {
    padding: 5px 10px 5px 10px;
    background-color: #272727;
    min-width: 50px;
    margin-left: 2px;
    margin-right: 2px;
}

QTabBar::tab:selected {
    background-color: #323232;
}

QPushButton {
    background-color: #272727;
    border-radius: 4px;
    padding: 5px 10px 5px 10px;
    min-width: 60px;
}

QToolButton {
    background-color: #272727;
    border-radius: 4px;
    padding: 5px 10px 5px 10px;
}

QLabel, QCheckBox {
    margin-left: 5px;
    margin-right: 5px;
    background-color: transparent;
}

QTabWidget::pane {
    border: 1px solid #323232;
}

QLineEdit, QComboBox, QSpinBox, QScrollBar {
    background-color: #272727;
    border: 1px solid #323232;
}
